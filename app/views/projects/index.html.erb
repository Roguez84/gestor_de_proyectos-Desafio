<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<%= search_form_for @q do |f| %> <!-- esto va a crear los espacios para insertar inputs que necesitamos para la query-->

    <div class="form-group"> <!-- esto va a poner un dropdown menu para buscar en la columna Status -->
        <%= f.label :status_eq, "Status" %>
        <%= f.select :status_eq, options_for_select(Project.statuses , @q.status_eq), {},{class: "form-control"} %>
    </div>
    <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Initial date</th>
      <th>End date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.initial_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
